<%= form_for @place do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, placeholder: 'name', class: "form-control input-sm" %><br>
  <br><br>
  <%= f.label :address %>
  <br>
  <%= f.text_area :address, placeholder: "address", rows: 10 %><br>
  <br>
  <%= f.label :established_at %>
  <br>
  <%= f.text_field :established_at, placeholder: 'established_at' %><br>
  <br>
   <%= f.label :phone_number %>
  <br>
  <%= f.text_field :phone_number, placeholder: 'phone_number' %><br>
  <br>
   <%= f.label :city %>
  <br>
  <%= f.text_field :city, placeholder: 'city' %><br>
  <br>
   <%= f.label :description %>
  <br>
  <%= f.text_field :description, placeholder: 'description' %><br>
  <br>
   <%= f.label :category_id %>
  <br>
  <%= f.select :category_id, @categories %>
  <br>
  <%= f.label :contact_mail %>
  <br>
  <%= f.text_field :contact_mail, placeholder:'contact_mail' %>
  <br>
  

  <br />
  <br />
  <br />
  
  <br>
  <%= f.submit 'Gonder' %>
<% end %>